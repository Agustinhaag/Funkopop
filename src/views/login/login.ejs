<link rel="stylesheet" href="Css/admin/login.css" />
<title>Login</title>
<main>
  <section class="main">
  <h2>INGRESAR A MI CUENTA</h2>
  <div class="container-formulario">
    <form id="form" action="/login" method="post">
    <div class="container-info">
      <div class="parent">
        <label for="email">Email:</label><input
          class="uno form-control <%= typeof errors !== 'undefined' ? 'is-invalid' : '' %>"
          type="email"
          name="email"
          id="email"
          value="<%= values.email %>"/>
        <% if (typeof errors !== "undefined" ) { %> <% errors.forEach(err =>{ %>
        <div class="invalid-feedback"><%= err.msg %></div>
        <% })} %>
      </div>
      <div class="parent">
        <label for="password">Contraseña:</label><input
          type="password"
          name="password"
          id="password"
          class="form-control <%= typeof errors !== 'undefined'? 'is-invalid' : '' %>"/>
        <% if (typeof errors !== "undefined") { %> <% errors.forEach(err =>{ %>
        <div class="invalid-feedback"><%= err.msg ? err.msg : '' %></div>
        <% })} %>
      </div>

      <div class="container-btn">
        <button type="submit">Ingresar</button>
        <div class="container-check"><input type="checkbox" name="" id="" /><span>Recordarme</span></div>
      </div>
    </div>
    </form>
    <div class="container-enlace"><a href="#">Olvidé mi contraseña</a></div>
  
  </div>
  <div class="register">
    <p class="mt-3">¿Aún no tiene una cuenta?</p>
    <a href="/register" class="btn btn-sm btn-outline-primary">Registrarse</a>
  </div>
</section>
</main>
